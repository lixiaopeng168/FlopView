<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/landingRecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        style="@style/TextStyle.Landing"
        android:onClick="touchSampleClick"
        android:text="@string/landing_touch" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        style="@style/TextStyle.Landing"
        android:onClick="animateSampleClick"
        android:text="@string/landing_animation" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        >


        <ImageView
            android:id="@+id/landingFlop01"
            android:layout_width="200dp"
            android:layout_height="300dp"

            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/flop_01" />

        <ImageView
            android:id="@+id/landingFlop02"
            android:layout_width="200dp"
            android:layout_height="300dp"

            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@mipmap/flop_02" />

    </RelativeLayout>

</LinearLayout>